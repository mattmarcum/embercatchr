<form role="form" class="form-horizontal">
    <div class="form-group form-group-lg">
        <label class="col-sm-2 control-label">Add a Podcast:</label>
        <div class="col-sm-10">
            {{view view.urlInput classNames="form-control" type="text" value=url}}
        </div>
    </div>
    <div class="form-group form-group-lg">
        <div class="col-xs-12 text-right">
            <button class="btn btn-primary btn-lg" {{action "save"}}>Save</button></div>
        </div>
    </div>
</form>
